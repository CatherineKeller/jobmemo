{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    // "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-multi-spaces": "error",
    "no-trailing-spaces": "error",
    "eol-last": "error"
  },
  "ignorePatterns": ["dist/*"]
}